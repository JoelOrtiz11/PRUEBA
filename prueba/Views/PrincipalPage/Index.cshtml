@model IEnumerable<prueba.Models.empresa>

@{
    ViewData["Title"] = "Principal Page";
}

    
    <body style="background-color:#4b4c81">


    @*Codigo quienes somos*@
            <div class="shadow p-3 mb-5 rounded mt-5" style="background-color:#cfcede">
                <h2 class="text-sm-center fw-bold p-2">¿Quienes Somos?</h2>
                <h3 class="fs-5 px-5 pb-4">
                    Somos una Pagina creada para poder promocionar las mejores ofertas de empleo,
                    de esta forma buscamos que muchas persona puedan conocer de los empleos disponibles.
                </h3>
            </div>
    @*Fin codigo quienes somos*@


    @*Muestra de ofertas de empleos*@
    <div class="shadow p-2 mb-2 rounded mt-5" style="background-color:#cfcede">
         @foreach (var empresas in (IEnumerable<dynamic>)ViewData["empresa"])
                            {
        <div class="container">
            <div class="row">
                <div class="col order-last">
                
                        <div class="container">
                            <div class="row p-3">
                                <div class="col text-sm-center">
                                    @empresas.nombre
                                </div>
                                <div class="row">
                                    <div class="col">
                                        @empresas.descripcion
                                    </div>
                                </div>

                                
                                <div class="row">
                                    <div class="col">
                                        @empresas.telefono
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        @empresas.correo
                                    </div>
                                    
                                </div>
                                
                            </div>
                        </div>                      
                </div>
                
                <div class="col">
                        <div class="container">
                            <div class="row p-3">
                                <div class="col text-sm-center">
                                    @empresas.nombre
                                </div>
                                <div class="row">
                                    <div class="col">
                                        @empresas.descripcion
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col">
                                        @empresas.telefono
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        @empresas.correo
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                <div class="col order-first">
                        <div class="container">
                            <div class="row p-3">
                                <div class="col text-sm-center">
                                    @empresas.nombre
                                </div>
                                <div class="row">
                                    <div class="col">
                                        @empresas.descripcion
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col">
                                        @empresas.telefono
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        @empresas.correo
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
            </div>
        </div>
        }
    </div>

    @*Fin del codigo de la muestra de empleos*@


    @*Codigo Marcas*@

    <div class="shadow p-2 rounded mt-5" style="background-color:#cfcede ">

        <div class="container">
            <div class="row p-3">
                <div class="col order-last ">
                    <img src="./css/imagenes/Logo-Vidri.jpg" class="w-75 d-flex mx-auto "/>
                </div>

                <div class="col">
                    <img src="./css/imagenes/McDonald's_logo.svg.png" class="w-100 mx-3" />
                </div>
                <div class="col order-first">
                    <img src="./css/imagenes/Yamaha-Logо.jpg" class="w-100 d-flex mx-auto mt-4" />
                </div>
            </div>

        </div>
    </div>

    @*Fin del Codigo Marcas*@


    @*Capita empleados y carrusel de testimonios*@

    <div class="p-5">

        <div class="container">
            <div class="row p-3">
                <div class="col order-first shadow rounded pt-3" style="background-color:#cfcede ">
                  <h1 class="text-sm-center">Capacita Empleados</h1>
                </div>

                <div class="col order-last shadow rounded p-3 mx-5" style="background-color:#cfcede ">
                    <h1 class="text-sm-center p-2">Testimonios</h1>
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner pb-3">
                            <div class="carousel-item active">
                                <div class="card mx-auto" style="width: 18rem;">
                                    <img src="./css/imagenes/Hombre1.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Antonio Miguel Hernandez</h5>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="card mx-auto" style="width: 18rem;">
                                    <img src="./css/imagenes/mujer1.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Lissette Colindres</h5>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="card mx-auto" style="width: 18rem;">
                                    <img src="./css/imagenes/hombre2.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Richard Alonso Menjivar</h5>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @*Fin de codigo de empleados y testimonios*@

    @*codigo de las Metricas*@

    <h1 class="text-sm-center text-white" style="margin-top:-30px">Metricas</h1>

    <div class="shadow p-2 rounded mt-4" style="background-color:#cfcede">

        <div class="container">
            <div class="row p-3">
                <div class="col order-last">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Usuarios</a>
                </div>
                
                <div class="col">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Empresas</a>
                    <div class="row align-items-sm-end">
                        <div class="col">
                            <a href="" class="btn btn-outline-primary mt-3" style="text-decoration:none">Activo</a>
                        </div>

                    </div>
                </div>
                <div class="col order-first">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Plazas</a>
                    <div class="row align-items-sm-end">
                        <div class="col">
                            <a href="" class="btn btn-outline-primary mt-3" style="text-decoration:none">Activo</a>
                        </div>

                    </div>
                </div>
                <div class="col order-last">
                    <a href="" class="btn btn-outline-primary" style="text-decoration:none">Aplicaciones</a>
                </div>
            </div>
        </div>

    </div>

    @*Fin codigo de las metricas*@

    </body>
